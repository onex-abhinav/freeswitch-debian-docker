<configuration name="callcenter.conf" description="Call Center">
  <settings>
    <!-- Use SQLite for better performance -->
    <param name="dbname" value="/dev/shm/callcenter.db"/>
    <!-- Clear agents on reload for testing -->
    <param name="truncate-agents-on-load" value="true"/>
    <param name="truncate-tiers-on-load" value="true"/>
  </settings>
  
  <queues>
    <!-- SBI Queues with different strategies -->
    <queue name="sbi_sales">
      <param name="strategy" value="longest-idle-agent"/>
      <param name="moh-sound" value="$${hold_music}"/>
      <param name="time-base-score" value="system"/>
      <param name="max-wait-time" value="300"/>
      <param name="max-wait-time-with-no-agent" value="60"/>
      <param name="max-wait-time-with-no-agent-time-reached" value="10"/>
      <param name="discard-abandoned-after" value="60"/>
      <param name="abandoned-resume-allowed" value="false"/>
    </queue>
    
    <queue name="sbi_marketing">
      <param name="strategy" value="round-robin"/>
      <param name="moh-sound" value="$${hold_music}"/>
      <param name="time-base-score" value="queue"/>
      <param name="max-wait-time" value="300"/>
    </queue>
    
    <queue name="sbi_accounts">
      <param name="strategy" value="ring-all"/>
      <param name="moh-sound" value="$${hold_music}"/>
      <param name="time-base-score" value="system"/>
      <param name="ring-progressively-delay" value="5"/>
    </queue>

    <!-- HDFC Queues -->
    <queue name="hdfc_sales">
      <param name="strategy" value="agent-with-least-talk-time"/>
      <param name="moh-sound" value="$${hold_music}"/>
      <param name="time-base-score" value="system"/>
    </queue>
    
    <queue name="hdfc_marketing">
      <param name="strategy" value="top-down"/>
      <param name="moh-sound" value="$${hold_music}"/>
    </queue>
    
    <queue name="hdfc_accounts">
      <param name="strategy" value="sequentially-by-agent-order"/>
      <param name="moh-sound" value="$${hold_music}"/>
    </queue>

    <!-- AXIS Queues -->
    <queue name="axis_sales">
      <param name="strategy" value="random"/>
      <param name="moh-sound" value="$${hold_music}"/>
    </queue>
    
    <queue name="axis_marketing">
      <param name="strategy" value="agent-with-fewest-calls"/>
      <param name="moh-sound" value="$${hold_music}"/>
    </queue>
    
    <queue name="axis_accounts">
      <param name="strategy" value="ring-progressively"/>
      <param name="moh-sound" value="$${hold_music}"/>
      <param name="ring-progressively-delay" value="8"/>
    </queue>
  </queues>

  <!-- Agents Configuration -->
  <agents>
    <!-- SBI Agents -->
    <agent name="agent7001" type="callback" contact="[leg_timeout=15]user/agent7001" status="Logged Out" max-no-answer="3" wrap-up-time="10" reject-delay-time="5" busy-delay-time="30" />
    <agent name="agent7002" type="callback" contact="[leg_timeout=15]user/agent7002" status="Logged Out" max-no-answer="3" wrap-up-time="10" reject-delay-time="5" busy-delay-time="30" />
    
    <!-- HDFC Agents -->
    <agent name="agent8001" type="callback" contact="[leg_timeout=15]user/agent8001" status="Logged Out" max-no-answer="3" wrap-up-time="10" reject-delay-time="5" busy-delay-time="30" />
    <agent name="agent8002" type="callback" contact="[leg_timeout=15]user/agent8002" status="Logged Out" max-no-answer="3" wrap-up-time="10" reject-delay-time="5" busy-delay-time="30" />
    
    <!-- AXIS Agents -->
    <agent name="agent9001" type="callback" contact="[leg_timeout=15]user/agent9001" status="Logged Out" max-no-answer="3" wrap-up-time="10" reject-delay-time="5" busy-delay-time="30" />
    <agent name="agent9002" type="callback" contact="[leg_timeout=15]user/agent9002" status="Logged Out" max-no-answer="3" wrap-up-time="10" reject-delay-time="5" busy-delay-time="30" />
  </agents>

  <!-- Tiers Configuration - Agent to Queue Mapping -->
  <tiers>
    <!-- SBI Tiers -->
    <tier agent="agent7001" queue="sbi_sales" level="1" position="1"/>
    <tier agent="agent7001" queue="sbi_marketing" level="2" position="1"/>
    <tier agent="agent7001" queue="sbi_accounts" level="3" position="1"/>
    
    <tier agent="agent7002" queue="sbi_sales" level="1" position="2"/>
    <tier agent="agent7002" queue="sbi_marketing" level="2" position="2"/>
    <tier agent="agent7002" queue="sbi_accounts" level="3" position="2"/>

    <!-- HDFC Tiers -->
    <tier agent="agent8001" queue="hdfc_sales" level="1" position="1"/>
    <tier agent="agent8001" queue="hdfc_marketing" level="1" position="2"/>
    <tier agent="agent8001" queue="hdfc_accounts" level="1" position="3"/>
    
    <tier agent="agent8002" queue="hdfc_sales" level="2" position="1"/>
    <tier agent="agent8002" queue="hdfc_marketing" level="2" position="2"/>
    <tier agent="agent8002" queue="hdfc_accounts" level="2" position="3"/>

    <!-- AXIS Tiers -->
    <tier agent="agent9001" queue="axis_sales" level="1" position="1"/>
    <tier agent="agent9001" queue="axis_marketing" level="1" position="1"/>
    <tier agent="agent9001" queue="axis_accounts" level="1" position="1"/>
    
    <tier agent="agent9002" queue="axis_sales" level="1" position="2"/>
    <tier agent="agent9002" queue="axis_marketing" level="1" position="2"/>
    <tier agent="agent9002" queue="axis_accounts" level="1" position="2"/>
  </tiers>
</configuration>