<configuration name="callcenter.conf" description="CallCenter">
  <settings>
  </settings>
  
  <queues>
    <queue name="support">
      <param name="strategy" value="longest-idle-agent"/>
      <param name="moh-sound" value="$${hold_music}"/>
      <param name="time-base-score" value="system"/>
    </queue>
    
    <queue name="sales">
      <param name="strategy" value="round-robin"/>
      <param name="moh-sound" value="$${hold_music}"/>
    </queue>
    
    <queue name="accounts">
      <param name="strategy" value="ring-all"/>
      <param name="moh-sound" value="$${hold_music}"/>
    </queue>
  </queues>

  <agents>
    <agent name="7001" type="callback" contact="user/7001" status="Logged Out"/>
    <agent name="7002" type="callback" contact="user/7002" status="Logged Out"/>
    <agent name="7003" type="callback" contact="user/7003" status="Logged Out"/>
  </agents>

  <tiers>
    <tier agent="7001" queue="support" level="1" position="1"/>
    <tier agent="7001" queue="sales" level="1" position="1"/>
    <tier agent="7001" queue="accounts" level="1" position="1"/>
    
    <tier agent="7002" queue="support" level="1" position="2"/>
    <tier agent="7002" queue="sales" level="1" position="2"/>
    <tier agent="7002" queue="accounts" level="1" position="2"/>
    
    <tier agent="7003" queue="support" level="1" position="3"/>
    <tier agent="7003" queue="sales" level="1" position="3"/>
    <tier agent="7003" queue="accounts" level="1" position="3"/>
  </tiers>
</configuration>